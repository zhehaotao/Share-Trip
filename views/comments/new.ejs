<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 class="h3 mb-3 font-weight-normal">Add new comment to <%=trip['name']%></h1>
    </div>

    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/trips/<%=trip['_id']%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div> 
        </form>
        <div class="text-center">
            <a href="/trips">Go back</a>
        </div>
    </div>  
</div>

<%- include("../partials/footer") %>