<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to ShareTrip!</h1>
            <p>View amazing trips from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/trips/new">Add New Trip</a></p>
            <p>
                <form class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Trip search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-dark">
                    </div>
                </form>
            </p>
        </div>   
    </header>     
    <div class="row text-center">
        <%trips.forEach((trip)=>{ %> 
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-4">
            <div class="card bg-light">
                <div class="col-md-3 col-sm-6"></div>                     
                <img src="<%=trip['image']%>" width="100%" height="180px" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%=trip["name"]%></h5>
                    <div>
                        <span class="badge badge-danger mb-0"><i class="far fa-heart"></i> <%= trip.likes.length %></span>
                    </div>
                    <hr>
                    <a href="/trips/<%= trip['_id']%>" class="btn btn-primary">More Info</a>
                </div>         
            </div>
        </div>
        <% })%>
    </div>
</div>

<%- include("../partials/footer") %>