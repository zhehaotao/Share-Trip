<%- include("../partials/header") %>
<div class="container" style="min-height:100vh">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-3">                
            <div class="card">
                <img src="<%= user.avatar %>" alt="user profile image" width="100%" height="180px">
                <div class="card-body">
                    <h1 class="card-title"><%= user.firstName + " " + user.lastName %></h1>                
                    <div class="card-text"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
                </div>                
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <h3><%= user.username %>'s trips:</h3>
            <ul>
            <% trips.forEach(function(trip) { %>
                <li><a href="/trips/<%= trip.id %>"><%= trip.name %></a></li>
            <% }); %>
            </ul>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>